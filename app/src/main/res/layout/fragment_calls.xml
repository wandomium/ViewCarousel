<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@android:color/white">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_call_contact0"
        style="@style/CallContactBtn"
        android:visibility="gone"
        app:icon="@drawable/outline_call_24"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_call_contact1"
        style="@style/CallContactBtn"
        android:visibility="gone"
        app:icon="@drawable/outline_call_24"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_call_contact2"
        style="@style/CallContactBtn"
        android:visibility="gone"
        app:icon="@drawable/outline_call_24"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_contact_button"
        android:layout_width="@dimen/call_contact_btn_width"
        android:layout_height="120dp"
        android:backgroundTint="@android:color/darker_gray"
        android:alpha="0.3"
        app:icon="@drawable/outline_add_call_24"
        app:iconGravity="textEnd"
        app:iconPadding="8dp"
        android:textSize="16sp"/>
</LinearLayout>